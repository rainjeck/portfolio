extends ../_template

block variables
	- var title = 'Тишук Надежда - front-end developer'

block content
	.welcome__wrap
		.welcome__login
			a.login__link#auth(href="#") Авторизоваться
		.welcome__window
			.window__box
				.flipcontainer#flip
					.flipper
						.welcome.front
							.userprofile
								.userprofile__pic
									img.userprofile__img(src="assets/img/myCoolAvatar.jpg")
								.userprofile__name Тишук Надежда
								.userprofile__prof Front-End Developer

							.usersocial
								ul.socialicons__list
								mixin socialIconsList (name,href)
									li.socialicons__item
										a.socialicons__link(href=href, target="_blank")= name
											svg.socialicons__icon
												use(xlink:href="assets/img/sprite.svg#"+name)
								+socialIconsList('vk', 'https://vk.com/tishukn')
								+socialIconsList('github', 'https://github.com/rainjeck')
								+socialIconsList('in', '#')

							.window__menu
								ul.window__menu__list
									mixin windowmenuItems (name,href)
										li.window__menu__item
											a.window__menu__link(href=href)= name
									+windowmenuItems('Мои работы','works.html')
									+windowmenuItems('Обо мне','about.html')
									+windowmenuItems('Блог','blog.html')
						// .welcome
						// login
						.login.box.back
							.box__title
								.box__title__text Авторизуйтесь
							form.form
								.form__text_icon
									input.form__text__input(type="text", placeholder="Логин", id="auth-login")
									label.form__text__label(for="auth-login")
										svg(class="form__icon icon__svg-login")
											use(xlink:href="assets/img/sprite.svg#login")
								.form__text_icon
									input.form__text__input(type="text", placeholder="Пароль", id="auth-pass")
									label.form__text__label(for="auth-pass")
										svg(class="form__icon icon__svg-password")
											use(xlink:href="assets/img/sprite.svg#password")
								.form__check
									input.form__check__input(type="checkbox", id="auth-check")
									label.form__check__label(for="auth-check") Я человек
										span.form__check__style
										svg(class="form__icon icon__svg-check")
											use(xlink:href="assets/img/sprite.svg#check")
								.form__robot
									| Вы точно не робот?
								.form__radiogroup
									label.form__radiogroup__label
										input.form__radiogroup__radio(type='radio', name='form__radiogroup')
										span.form__radiogroup__style
										| Да
									label.form__radiogroup__label
										input.form__radiogroup__radio(type='radio', name='form__radiogroup')
										span.form__radiogroup__style
										| Не уверен

							.window__menu
								ul.window__menu__list
									li.window__menu__item
										a.window__menu__link#flipreturn(href="#") На главную
									li.window__menu__item
										a.window__menu__link(href="#") Войти
								
		.welcome__footer
			| © Тишук Надежда | создано с любовью в LoftSchool | 2016