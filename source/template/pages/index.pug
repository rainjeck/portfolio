extends ../_template

block variables
  - var title = 'Тишук Надежда - front-end developer'

block content
  include ../common/_mixins
  // preloader
  .preloader
    .preloader__spinner
      .preloader__animate
        span.preloader__animate_circle.preloader__animate_sm
        span.preloader__animate_circle.preloader__animate_md
        span.preloader__animate_circle.preloader__animate_lg
      .preloader__percents 0

  // welcome
  section.welcome
    .welcome__top
      a.login__link.flip-button.form-reset(href="#") Авторизоваться
    .welcome__middle
      // profile panel
      .flip
        .flip-container
          .flipper
            .panel.flip-front
              .welcome__profile
                .user
                  .user__pic
                    img.user__img(src="assets/img/myCoolAvatar.jpg" alt="web developer", width="100", height="100")
                  h1.user__name
                    | Тишук Надежда
                  h2.user__prof
                    | Front-End Developer
                +socials('socials-profile')
                ul.panel__list
                  li.panel__item
                    a.panel__link(href="works.html") Мои работы
                  li.panel__item
                    a.panel__link(href="about.html") Обо мне
                  li.panel__item
                    a.panel__link(href="blog.html") Блог

            // login panel
            .panel.flip-back
              .welcome__login
                .title
                  span.title-medium.title-light.title-login
                    | Авторизуйтесь
                form#loginForm.form
                  fildset.form__fildset
                    .form__group.form__group-input
                      input.form__input-text.form__input-label(type='text', name='username', id="username", placeholder="Логин")
                      label.form__label-text(for='username')
                        svg(class="form__icon-text")
                          use(xlink:href="assets/img/sprite.svg#login")
                        | Логин
                    .form__group.form__group-input
                      input.form__input-text.form__input-label(type='password', name='password', id="password", placeholder="Пароль")
                      label.form__label-text(for='password')
                        svg(class="form__icon-text icon__svg-password")
                          use(xlink:href="assets/img/sprite.svg#password")
                        | Пароль
                    .form__group.form__group-checkbox
                      label.form__label-checkbox(for='human-check')
                        input.form__input-checkbox(type='checkbox', name='human-check', id="human-check")
                        span.form__checkbox
                          svg(class="form__icon-checkbox")
                            use(xlink:href="assets/img/sprite.svg#check")
                        | Я человек
                    .form__group.form__group-radio
                      .form__text Вы точно не робот?
                      label.form__label-radio
                        input.form__input-radio(type='radio', name='catpcha')
                        span.form__radio
                        | Да
                      label.form__label-radio
                        input.form__input-radio(type='radio', name='catpcha')
                        span.form__radio
                        | Не уверен
                  .panel__menu
                    ul.panel__list
                      li.panel__item
                        a.panel__link.flip-return(href='#') На главную
                      li.panel__item
                        button.panel__link.form__submit Войти

    .welcome__bottom
      .welcome__footer
        | © Тишук Надежда | создано с любовью в LoftSchool | 2016
