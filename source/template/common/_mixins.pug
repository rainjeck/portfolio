//- Slider Items
mixin slider
  each item in slideItems
    li.slider__item
      .myworks
        .myworks__description
          .myworks__name #{item.name}
          .myworks__tech #{item.tech}
          a.myworks__link(href= item.link, target="_blank") Посмотреть сайт
            svg.myworks__link__icon
              use(xlink:href="assets/img/sprite.svg#link")
        .myworks__image
          img.myworks__image__item(src= item.img )

//- Socials List
mixin socials (className)
  ul.socials(class= className)
    each item in socialsLinks
      li.socials__item
        a.socials__link(href= item.href)
          svg.socials__icon
            use(xlink:href="assets/img/sprite.svg#" + item.name)

//- Navigate List
mixin menuList (id, className)
  ul(class= className, id= id)
    each item in navLinks
      li(class= className + '__item')
        a(class= className + '__link', href= item.href)= item.name

//- contacts
mixin contactsList (className)
  ul(class= className)
    each item in contactsLinks
      li(class= className + '__item')
        a(class= className + '__link', href= item.href)= item.name

mixin contactsListWithIcon (className)
  ul(class= className)
    each item in contactsLinks
      li(class= className + '__item')
        svg(class= className + '__icon')
          use(xlink:href='assets/img/sprite.svg#' + item.icon)
        a(class= className + '__link', href= item.href)= item.name

//- title
mixin title (tagName,className,name)
  #{tagName}(class="title")
    span(class= className)!= name

mixin titleWithIcon (tagName,className,iconName,name)
  #{tagName}(class="title")
    span(class= className)!= name
      svg.title__icon(preserveAspectRatio="none")
        use(xlink:href='assets/img/sprite.svg#' + iconName)

//- Skills List
mixin skill (skillType, long, diameter)
  .skill__item
    svg.skill__icon(stroke-dasharray= diameter)
      circle(transform="rotate(-90, 45, 45)")
      circle(transform="rotate(-90, 45, 45)", stroke-dashoffset= long, class="sector")
    span.skill__type!= skillType

//- blog list
mixin blogItem (name,href)
  li.blog-nav__item
    a.blog-nav__link(href= href)= name